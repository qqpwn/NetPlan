<Page
    x:Class="NetPlan.View.AdminOpretVagt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NetPlan.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:NetPlan.Viewmodel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <vm:ViewModel></vm:ViewModel>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <DatePicker SelectedDate="{Binding OpretShift.Date, Mode=TwoWay}"></DatePicker>
            <ComboBox ItemsSource="{Binding Works}" DisplayMemberPath="Name" SelectedValue="{Binding OpretShift.Fk_workhourTemplate, Mode=TwoWay}" SelectedValuePath="Id"></ComboBox>
            <ComboBox ItemsSource="{Binding Users}" DisplayMemberPath="Name" SelectedValue="{Binding OpretShift.Fk_users, Mode=TwoWay}" SelectedValuePath="Id"></ComboBox>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10,0" Command="{Binding CreateShiftCommand}" Click="Cancel">Opret</Button>
                <Button Margin="10,0" Click="Cancel">Tilbage</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
